<script>
    {# navbar #}
    try {
    document.addEventListener('DOMContentLoaded', function() {
        let dropdownButton = document.getElementById('dropdownMenuButton');
        let dropdownMenu = document.querySelector('.dropdown-menu');
      
        dropdownButton.addEventListener('click', function(event) {
            event.stopPropagation();
            toggleDropdown();
        });
      
        document.addEventListener('click', function(event) {
            let targetElement = event.target;
            if (!dropdownButton.contains(targetElement) && !dropdownMenu.contains(targetElement)) {
                if (dropdownMenu.classList.contains('show')) {
                    toggleDropdown();
                }
            }
        });
      
        function toggleDropdown() {
            dropdownMenu.classList.toggle('show');
        }
    });    
    } catch (error) {
        
    }
    {# end navbar #}

    {# 1st slider #}

    try{
        document.addEventListener('DOMContentLoaded', function () {
        const carousel = document.getElementById('imageCarousel');
        const prevButton = document.querySelector('.custom-prev-button');
        const nextButton = document.querySelector('.custom-next-button');
        const imagesContainer = document.querySelector('.custom-carousel-images');
        const imageItems = document.querySelectorAll('.image-item');
        const ImageCount = document.querySelectorAll('.image-count').length;

        let currentIndex = 0;
        let visibleImages;
        let maxIndex;

        function calculateDimensions() {
            const totalImages = ImageCount;
            const imageWidth =
            imageItems[0].offsetWidth +
            parseInt(getComputedStyle(imageItems[0]).marginLeft) * 2;
            visibleImages = Math.floor(carousel.offsetWidth / imageWidth);
            maxIndex = totalImages - visibleImages;
            updateButtonStates();
        }

        function updateButtonStates() {
            prevButton.disabled = currentIndex === 0;
            nextButton.disabled =
            currentIndex === maxIndex && imageItems.length > visibleImages;
        }

        nextButton.addEventListener('click', () => {
            if (currentIndex < maxIndex) {
            currentIndex++;
            } else {
            currentIndex = 0; // Reset to the first image
            }
            const translateXValue =
            -currentIndex *
            (imageItems[0].offsetWidth +
                parseInt(getComputedStyle(imageItems[0]).marginLeft) * 2);
            imagesContainer.style.transition = 'transform 0.5s ease';
            imagesContainer.style.transform = `translateX(${translateXValue}px)`;
            updateButtonStates();
        });

        prevButton.addEventListener('click', () => {
            if (currentIndex > 0) {
            currentIndex--;
            } else {
            currentIndex = maxIndex; // Set to the last image
            }
            const translateXValue =
            -currentIndex *
            (imageItems[0].offsetWidth +
                parseInt(getComputedStyle(imageItems[0]).marginLeft) * 2);
            imagesContainer.style.transition = 'transform 0.5s ease';
            imagesContainer.style.transform = `translateX(${translateXValue}px)`;
            updateButtonStates();
        });

        window.addEventListener('resize', calculateDimensions);
        calculateDimensions();
        });

    }catch(error){
        
    }

    {# end 1st slider #}

    {# start 2nd slider #}

    try{
        document.addEventListener('DOMContentLoaded', function () {
        const cardCarousel = document.getElementById('cardCarousel');
        const cardPrevButton = cardCarousel.querySelector('.custom-prev-button-card');
        const cardNextButton = cardCarousel.querySelector('.custom-next-button-card');
        const cardImagesContainer = cardCarousel.querySelector(
            '.custom-carousel-images'
        );
        const cardImageItems = cardCarousel.querySelectorAll('.image-item');

        let cardCurrentIndex = 0;

        function calculateCardDimensions() {
            const cardCarouselWidth = cardCarousel.offsetWidth;
            const style = window.getComputedStyle(cardImagesContainer);
            const gap = parseFloat(style.getPropertyValue('gap'));
            const cardImageWidth = cardImageItems[0].offsetWidth + gap;
            let cardVisibleImages = Math.floor(cardCarouselWidth / cardImageWidth);

            // Adjust the number of visible cards based on screen size
            if (window.innerWidth < 768) {
            cardVisibleImages = 1; // Show 1 card on small screens
            } else if (window.innerWidth >= 768 && window.innerWidth < 992) {
            cardVisibleImages = 2; // Show 2 cards on medium screens
            } else {
            cardVisibleImages = Math.floor(cardVisibleImages); // Show full cards on large screens
            }

            // Update the layout or state based on the new number of visible cards
            updateButtonStates(cardVisibleImages);
        }

        function updateButtonStates(cardVisibleImages) {
            cardPrevButton.disabled = cardCurrentIndex === 0;
            cardNextButton.disabled =
            cardCurrentIndex >= cardImageItems.length - cardVisibleImages;
        }

        cardNextButton.addEventListener('click', () => {
            const cardVisibleImages = calculateVisibleImages();
            if (cardCurrentIndex < cardImageItems.length - cardVisibleImages) {
            cardCurrentIndex++;
            }
            updateCarouselTransform();
        });

        cardPrevButton.addEventListener('click', () => {
            if (cardCurrentIndex > 0) {
            cardCurrentIndex--;
            }
            updateCarouselTransform();
        });

        function updateCarouselTransform() {
            const style = window.getComputedStyle(cardImagesContainer);
            const gap = parseFloat(style.getPropertyValue('gap'));
            const transformValue = -(
            cardCurrentIndex *
            (cardImageItems[0].offsetWidth + gap)
            );
            cardImagesContainer.style.transform = `translateX(${transformValue}px)`;
            updateButtonStates(calculateVisibleImages());
        }

        function calculateVisibleImages() {
            const cardCarouselWidth = cardCarousel.offsetWidth;
            const style = window.getComputedStyle(cardImagesContainer);
            const gap = parseFloat(style.getPropertyValue('gap'));
            const cardImageWidth = cardImageItems[0].offsetWidth + gap;
            let cardVisibleImages = Math.floor(cardCarouselWidth / cardImageWidth);

            if (window.innerWidth < 768) {
            cardVisibleImages = 1;
            } else if (window.innerWidth >= 768 && window.innerWidth < 992) {
            cardVisibleImages = 2;
            } else {
            cardVisibleImages = Math.max(3, cardVisibleImages);
            }

            return cardVisibleImages;
        }

        window.addEventListener('resize', calculateCardDimensions);
        calculateCardDimensions(); // Initial call to set up the carousel
        });

    }catch(error){

    }

    {# end 2nd slider #}

    {# start 2rd slider #}

    try{
        // Slider 3 - Brand Slider
        document.addEventListener('DOMContentLoaded', function () {
        const brandCarousel = document.getElementById('brandCarousel');
        const brandPrevButton = brandCarousel.querySelector('.brand-prev-button');
        const brandNextButton = brandCarousel.querySelector('.brand-next-button');
        const brandImagesContainer = brandCarousel.querySelector(
            '.brand-carousel-images'
        );
        const brandImageItems = brandCarousel.querySelectorAll('.brand-image-item');

        let brandCurrentIndex = 0;
        const brandTotalImages = brandImageItems.length;
        const brandVisibleImages = 5; // Display 5 images for the brand slider

        // Calculate the width of each image item including margins
        const brandImageWidth =
            brandImageItems[0].offsetWidth +
            parseInt(getComputedStyle(brandImageItems[0]).marginLeft) * 2;

        function updateBrandButtonStates() {
            brandPrevButton.disabled = brandCurrentIndex === 0;
            brandNextButton.disabled =
            brandCurrentIndex >= brandTotalImages - brandVisibleImages;
        }

        brandNextButton.addEventListener('click', () => {
            if (brandCurrentIndex < brandTotalImages - brandVisibleImages) {
            brandCurrentIndex++;
            }
            brandImagesContainer.style.transform = `translateX(-${
            brandCurrentIndex * brandImageWidth
            }px)`;
            updateBrandButtonStates();
        });

        brandPrevButton.addEventListener('click', () => {
            if (brandCurrentIndex > 0) {
            brandCurrentIndex--;
            }
            brandImagesContainer.style.transform = `translateX(-${
            brandCurrentIndex * brandImageWidth
            }px)`;
            updateBrandButtonStates();
        });

        updateBrandButtonStates(); // Initial call to set the correct state of the navigation buttons
        });

    }catch(error){

    }

    {# end 3rd slider #}
</script>

