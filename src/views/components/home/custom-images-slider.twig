<div class="container my-5">
  <div class="row">
    <div class="col-12 col-md-6">
      <h2>{{component.title}}</h2>
      <p>{{component.description}}</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 slider-container">
      <div id="imageCarousel" class="custom-carousel">
        <div class="custom-carousel-images">
            {% for slide in component.slides %}
                <div class="image-slider-item image-count">
                    <img src="{{slide.image}}" alt="Image 1" class="first-slider-img">
                    <span class="image-title text-primary font-bold">{{slide.title}}</span>
                </div>
            {% endfor %}
        </div>
      </div>
      <button class="custom-prev-button btn btn-primary p-0 rounded-6">
        <i class="bi bi-chevron-left text-white"></i>
      </button>
      <button class="custom-next-button btn btn-primary p-0 rounded-6">
        <i class="bi bi-chevron-right text-white"></i>
      </button>
    </div>
  </div>
</div>