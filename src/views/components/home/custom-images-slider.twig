<div class="container my-5">
  <div class="row">
    <div class="col-12 text-start text-md-end">
      <h2>{{component.title}}</h2>
      <p>{{component.description}}</p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 slider-container">
      <div id="imageCarousel" class="custom-carousel">
        <div class="custom-carousel-images py-4">
            {% for product in component.products %}
              
                <div class="image-slider-item image-count">
                    <a href="{{product.url}}"><img src="{{product.image.url}}" alt="{{product.name}}" class="first-slider-img"></a>
                    <span class="image-title text-primary font-bold">{{product.name}}</span>
                </div>
              
            {% endfor %}
        </div>
        <button class="custom-prev-button btn btn-primary p-0 rounded-6" id="custom-prev-buttonId">
          <i class="bi bi-chevron-left text-white"></i>
        </button>
        <button class="custom-next-button btn btn-primary p-0 rounded-6" id="custom-next-buttonId">
          <i class="bi bi-chevron-right text-white"></i>
        </button>
      </div>
    </div>
  </div>
</div>