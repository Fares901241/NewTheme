<div class="container">
    <div class="row justify-content-center">
    {% for slide in component.slides %}
        <div class="col-10 col-md-5 col-lg-3 mx-1 c2 my-3">
            <div class="card2 rounded-4" >
                <div class="card22 rounded-4" style="background-color:{{slide.background}};display: grid;">
                    <div class="m-2" style="justify-self: end;height: fit-content;">
                        <div class="bg-light rounded-5 p-2">
                            <div class="heart-container" style="width: 15px; height: 15px;" title="Like">
                                <input type="checkbox" class="checkbox" id="Give-It-An-Id">
                                <div class="svg-container">
                                    <svg viewBox="0 0 24 24" class="svg-outline" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M17.5,1.917a6.4,6.4,0,0,0-5.5,3.3,6.4,6.4,0,0,0-5.5-3.3A6.8,6.8,0,0,0,0,8.967c0,4.547,4.786,9.513,8.8,12.88a4.974,4.974,0,0,0,6.4,0C19.214,18.48,24,13.514,24,8.967A6.8,6.8,0,0,0,17.5,1.917Zm-3.585,18.4a2.973,2.973,0,0,1-3.83,0C4.947,16.006,2,11.87,2,8.967a4.8,4.8,0,0,1,4.5-5.05A4.8,4.8,0,0,1,11,8.967a1,1,0,0,0,2,0,4.8,4.8,0,0,1,4.5-5.05A4.8,4.8,0,0,1,22,8.967C22,11.87,19.053,16.006,13.915,20.313Z">
                                        </path>
                                    </svg>
                                    <svg viewBox="0 0 24 24" class="svg-filled" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M17.5,1.917a6.4,6.4,0,0,0-5.5,3.3,6.4,6.4,0,0,0-5.5-3.3A6.8,6.8,0,0,0,0,8.967c0,4.547,4.786,9.513,8.8,12.88a4.974,4.974,0,0,0,6.4,0C19.214,18.48,24,13.514,24,8.967A6.8,6.8,0,0,0,17.5,1.917Z">
                                        </path>
                                    </svg>
                                    <svg class="svg-celebrate" width="100" height="100" xmlns="http://www.w3.org/2000/svg">
                                        <polygon points="10,10 20,20"></polygon>
                                        <polygon points="10,50 20,50"></polygon>
                                        <polygon points="20,80 30,70"></polygon>
                                        <polygon points="90,10 80,20"></polygon>
                                        <polygon points="90,50 80,50"></polygon>
                                        <polygon points="80,80 70,70"></polygon>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center d-grid">
                        {% for product in component.products %}
                            {% if loop.index == slide.index %}
                                <a style="justify-self:center;" href='{{ product.url }}'><img style="height: 200px;justify-self:center;" class="card3img {{slide.icolor}} {{slide.index}}img activeimg" src="{{ product.image.url }}"/></a>
                            {% endif %}
                        {% endfor %}
                        {% for color in component.colors %}
                            {% if color.index == slide.index %}
                                {% for product in component.products %}
                                    {% if loop.index == slide.index %}
                                        <a style="justify-self:center;" href='{{ product.url }}'><img style="height: 200px;justify-self:center;" class="card3img {{color.text}} {{slide.index}}img" src="{{color.image}}"/></a>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>

                    <span class="me-2 me-lg-3 my-1 my-lg-3 text-end" style="color: {{slide.textcolor}};display: block;">الوان</span>
                    <div class="text-end">
                        {% for color in component.colors %}
                            {% if color.index == slide.index %}
                                <button class="d-inline-block ms-2 {{slide.index}}color colorbtn" onclick="changeImageByColor('{{slide.index}}', '{{color.text}}')" style="background-color: {{color.text}};width: 20px; height: 20px;border-radius: 100%;"></button>   
                            {% endif %}
                        {% endfor %}
                        <button class="d-inline-block me-3 ms-2 {{slide.index}}color colorbtn activecolor" onclick="changeImageByColor('{{slide.index}}', '{{slide.icolor}}')" style="background-color: {{slide.icolor}};width: 20px; height: 20px;border-radius: 100%;"></button>
                    </div>
                    <div style="max-width:260px"><p class="px-2 px-lg-3 pt-1 pt-lg-3 text-end" style="color: {{slide.textcolor}};overflow: hidden; text-overflow: ellipsis; word-wrap: break-word;">القي نظره علي واحده من افضل مجموعات المنتجات في العالم</p></div>
                    <div><p class="px-2 px-lg-3 pt-1 pt-lg-3 text-end fs-6 fw-bold">السعر: {{slide.price}} ر.س</p></div>
                    {# <div data-tooltip="Price:-${{slide.price}}" class="button cartbtn m-3 rounded-4" style="cursor: pointer;">
                        <div class="button-wrapper cartbtn-wrapper">
                            <div class="text buytxt text-dark">Buy Now</div>
                            <span class="icon carticon">
                                <svg viewBox="0 0 16 16" class="bi bi-cart2" fill="currentColor" height="16" width="16" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"></path>
                                </svg>
                            </span>
                        </div>
                    </div> #}
                    {% for product in component.products %}
                        {% if loop.index == slide.index %}
                            <form class="form product-form" enctype="multipart/form-data" method="post"
                                onsubmit="return salla.form.onSubmit('cart.addItem', event)">
                                <input type="hidden" name="id" value="{{ product.id }}">
                                {% if product.is_hidden_quantity or product.type == 'booking' %}
                                    <input type="hidden" value="1" name="quantity" aria-label="Quantity"/>
                                {% else %}
                                    <div class="sticky-product-bar__quantity center-between mb-5" hidden>
                                        <label class="form-label font-bold">
                                            {{ trans('pages.products.quantity') }}
                                        </label>
                                        <salla-quantity-input max="{{ product.max_quantity }}" value="1" name="quantity" aria-label="Quantity"
                                        class="border-gray-200 flex justify-end"></salla-quantity-input>
                                    </div>
                                {% endif %}

                                <salla-add-product-button
                                    quick-buy
                                    support-sticky-bar
                                    {{product.is_require_shipping ? 'required-shipping' : ''}}
                                    amount="{{ product.base_currency_price }}"
                                    class="mt-2 w-full sticky-product-bar__btn"
                                    product-status="{{ product.status }}"
                                    product-type="{{ product.type }}"
                                    product-id="{{ product.id }}"
                                    loader-position="end"
                                    type="submit"
                                    width="wide"
                                    
                                    {% if product.notify_availability %}
                                        {{ product.notify_availability.subscribed ? 'is-subscribed' : '' }}
                                        channels="{{ product.notify_availability.channels|join(',') }}"
                                        subscribed-options="{{ product.notify_availability.subscribed_options|json_encode }}"
                                        {{ product.notify_availability.options ? 'notify-options-availability' : '' }}
                                    {% endif %}>
                                    <i class="bi bi-cart-fill"></i> {{ product.add_to_cart_label }}
                                </salla-add-product-button>
                            </form>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
    